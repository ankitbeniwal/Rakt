<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#CC3A1A1A" />
            <stroke
                android:width="1dp"
                android:color="#80000000" />
            <corners
                android:radius="90dp" />
            <padding android:right="50dp" android:left="50dp"
                android:top="20dp" android:bottom="20dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#3A1A1A"
                android:endColor="#3A1A1A"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#80000000" />
            <corners
                android:radius="90dp" />
            <padding android:right="50dp" android:left="50dp"
                android:top="20dp" android:bottom="20dp"/>
        </shape>
    </item>
</selector>