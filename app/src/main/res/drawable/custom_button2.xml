<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#80E5322E" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#E5322E"
                android:endColor="#E5322E"
                android:angle="270" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
</selector>